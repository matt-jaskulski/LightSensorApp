<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightMeterApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LightMeterApp.TextAppearance.LightReading" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_dome</item>
    </style>

    <style name="LightMeterApp.TextAppearance.Value" parent="TextAppearance.MaterialComponents.Headline6"/>
    <style name="LightMeterApp.TextAppearance.Label" parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="LightMeterApp.Footer" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="LightMeterApp.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

</resources>